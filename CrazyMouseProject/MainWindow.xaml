<Window x:Class="Crazy_Mouse_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crazy_Mouse_Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Margin="0,0,-8,-21">
        <Button x:Name="xTheButton" Content="Click Me!!" HorizontalAlignment="Left" VerticalAlignment="Top" Width="207" RenderTransformOrigin="0.504,0.549" Margin="300,150,0,0" Height="135" Click="first_button_Click"/>
        <Label x:Name="TimerLabel" Content="0" FontFamily="Segoe U" FontSize="30" HorizontalAlignment="Right" VerticalContentAlignment="Top"/>
        <TextBlock x:Name="xMyScore" HorizontalAlignment="Left" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Margin="698,376,0,0" Height="35" Width="92" FontSize="30"/>
        <TextBlock x:Name="xHighScore" HorizontalAlignment="Left" Height="34" Margin="0,377,0,0" TextWrapping="Wrap" Text="High Score:" VerticalAlignment="Top" Width="434" FontSize="30
                   "/>
        <TextBox x:Name="xNamebox" HorizontalAlignment="Left" Height="37" Margin="10,10,0,0" TextWrapping="Wrap" Text="name" VerticalAlignment="Top" Width="191" FontSize="30"/>
    </Grid>
</Window>